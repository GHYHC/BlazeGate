@using AntDesign.ProLayout
@using BlazeGate.Dashboard.Components.Share
@using BlazeGate.Dashboard.Resources
@using Microsoft.Extensions.Localization
@inherits LayoutComponentBase

<AntDesign.ProLayout.BasicLayout Logo="@("assets/logo.svg")" MenuData="MenuData">
    <RightContentRender>
        <RightContent></RightContent>
    </RightContentRender>
    <ChildContent>
        @Body
    </ChildContent>
    <FooterRender>
        <FooterView Copyright="2025 BlazeGate" Links="Links"></FooterView>
    </FooterRender>
</AntDesign.ProLayout.BasicLayout>
@* <SettingDrawer /> *@

@code
{
    [Inject]
    private IStringLocalizer<I18n> L { get; set; }

    private MenuDataItem[] MenuData =>
    [
        new MenuDataItem
        {
            Path = "/",
            Name = L["menu.serviceManagement"],
            Key = "service",
            Icon = "smile",
        },
        new MenuDataItem
        {
            Path = "/user",
            Name = L["menu.userManagement"],
            Key = "user",
            Icon = "smile",
        }
    ];

    public LinkItem[] Links { get; set; } = new LinkItem[] { };
}