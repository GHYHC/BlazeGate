@using BlazeGate.Dashboard.Components.Layout
@using BlazeGate.Dashboard.Components.Share
@using Microsoft.AspNetCore.Authorization
@layout UserLayout
@page "/Account/Login"
@attribute [AllowAnonymous]

<div class="main__b__0">
    <div class="login">
        <Form Loading="_loading" Model="@_model" OnFinish="HandleSubmit">
            <FormItem>
                <AntDesign.Input Placeholder="账号" Size="InputSize.Large" @bind-Value="@context.UserName">
                    <Prefix><Icon Type="user" /></Prefix>
                </AntDesign.Input>
            </FormItem>
            <FormItem>
                <AntDesign.Input Placeholder="密码" Size="InputSize.Large" @bind-Value="@context.Password" Type="InputType.Password">
                    <Prefix><Icon Type="lock" /></Prefix>
                </AntDesign.Input>
            </FormItem>
            <Button Type="ButtonType.Primary" HtmlType="submit" Class="submit" Size="ButtonSize.Large" Block>登录</Button>
        </Form>
    </div>
</div>
<Ajax @ref=Ajax></Ajax>